{
  "name": "focusly-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve focusly-demo-app",
    "start:open": "ng serve focusly-demo-app -o",
    "start:prod": "ng serve focusly-demo-app --configuration production",
    "build:demo": "ng build focusly-demo-app",
    "build:demo:watch": "ng build focusly-demo-app --watch",
    "build:demo:prod": "ng build focusly-demo-app --configuration production",
    "build:demo:ghpages": "ng build focusly-demo-app --configuration production --base-href /focusly-demo-app/",
    "build:lib": "ng build focusly && npm run copy-readme",
    "watch:lib": "ng build focusly --watch",
    "build:nz": "ng build focusly-nz",
    "watch:nz": "ng build focusly-nz --watch",
    "build:config": "ng build focusly-config",
    "watch:config": "ng build focusly-config --watch",
    "dev": "concurrently \"ng build focusly --watch\" \"ng serve focusly-demo-app -o\"",
    "copy-readme": "copy ..\\README.md dist\\focusly\\README.md",
    "pack": "cd ./dist/focusly && npm pack",
    "pack:config": "cd ./dist/focusly-config && npm pack",
    "pack:nz": "cd ./dist/focusly-nz && npm pack",
    "publish": "cd ./dist/focusly && npm publish",
    "publish:config": "cd ./dist/focusly-config && npm publish --access public",
    "publish:nz": "cd ./dist/focusly-nz && npm publish --access public",
    "format": "prettier --write \"**/*.{ts,js,html,css,scss,md,json}\"",
    "changeset:changeset": "changeset",
    "changeset:version-packages": "changeset version",
    "changeset:release": "changeset publish",
    "test:playwright": "playwright test",
    "test:playwright:debug": "playwright test --debug",
    "test:playwright:headed": "playwright test --headed"
  },
  "workspaces": [
    "projects/focusly",
    "projects/focusly-config",
    "projects/focusly-nz"
  ],
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.9",
    "@angular/compiler": "^20.3.9",
    "@angular/core": "^20.3.9",
    "@angular/forms": "^20.3.9",
    "@angular/platform-browser": "^20.3.9",
    "@angular/platform-browser-dynamic": "^20.3.9",
    "@angular/router": "^20.3.9",
    "ng-zorro-antd": "^20.4.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.8",
    "@angular/cli": "^20.3.8",
    "@angular/compiler-cli": "^20.3.9",
    "@changesets/cli": "^2.29.7",
    "@playwright/test": "^1.57.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.3.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3"
  }
}
